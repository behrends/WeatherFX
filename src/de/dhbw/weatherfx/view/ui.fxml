<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<SplitPane dividerPositions="0.4" prefHeight="500.0" prefWidth="700.0" xmlns:fx="http://javafx.com/fxml" fx:controller="de.dhbw.weatherfx.Controller">
   <stylesheets>
      <URL value="@stylesheet.css" />
   </stylesheets>

   <items>
      <VBox>
         <children>
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="citiesField" />
                  <Button mnemonicParsing="false" onAction="#btnClicked" text="Add city" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <ListView fx:id="citiesList" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0" />
   </items>
</SplitPane>
